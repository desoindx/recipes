generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Ingredient {
  id              Int     @id @default(autoincrement())
  literalQuantity String
  quantity        Float
  name            String
  Recipe          Recipe? @relation(fields: [recipeId], references: [id])
  recipeId        String?
}

model Step {
  id          Int     @id @default(autoincrement())
  position    Int
  description String
  image       String?
  Recipe      Recipe? @relation(fields: [recipeId], references: [id])
  recipeId    String?
}

model Recipe {
  id          String       @id
  slug        String
  name        String
  image       String
  cookingTime Int
  waitingTime Int
  kiloCalorie Int
  facets      String[]
  ingredients Ingredient[]
  steps       Step[]
}
